@model e_commerce.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<script src="~/Scripts/jquery-3.0.0.js"></script>
<script>
    $(function () {
        "use strict";
        $("#showpass").click(function () {
            $(this).toggleClass("active");
            if ($(this).hasClass("active")) {

                $(this).attr("title","hide password").prev("input").attr("type", "text");

            } else {
                $(this).attr("title", "show password").prev("input").attr("type", "password");

            }

        });
    });
</script>
@section menu{}

<div class="span9">
    <ul class="breadcrumb">
        <li>
            <a href="#">Home</a>
            <span class="divider">/</span>
        </li>
        <li class="active">Login</li>
    </ul>
    <h3> Registration</h3>
    <hr class="soft" />
    <div class="well">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3>Your Personal Details</h3>
            @*@Html.ValidationSummary()*@

            <div class="control-group">
                <label class="control-label">

                </label>

            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname">UserName <sup>*</sup></label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="inputFname">Email <sup>*</sup></label>
                <div class="controls">

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <span class="icon-4x"></span>
            <div class="control-group">
                <label class="control-label">Password <sup>*</sup></label>
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
                    @*<img id="showpass" src="~/assets/img/visa.png" />*@
                    <div id="showpass" class="icon-camera" style="cursor:pointer" title="show password"></div>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

            </div>
            <div class="form-group" style="margin-left:200px">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>



                <br />
                <div class="control-group " style="margin-left:70px">
                    <div class="controls">
                        <input type="submit" value="Log in" class="exclusive shopBtn" />
                    </div>
                </div>
                }




                <p>
                    @Html.ActionLink("Register", "Register") if you don't have a local account.
                </p>
                <div class="col-md-4">
                    <section id="socialLoginForm">
                        @*@Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })*@
                    </section>
                </div>
            </div>
</div>



